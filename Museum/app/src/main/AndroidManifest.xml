<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="id.ac.petra.informatika.museum"
    android:background="@drawable/bgsemua">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/museum_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/museum_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity
            android:name=".Information.CaptureActivityPortrait"
            android:screenOrientation="portrait"
            android:stateNotNeeded="true"
            android:theme="@style/zxing_CaptureTheme"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".Information.information"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".TreasureHunt.GameManager"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".TreasureHunt.InformationGame"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Information.Video"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".InformasiMuseum"
            android:configChanges="orientation"
            android:label="@string/title_activity_informasi_museum"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".Information.InformasiArtefak"
            android:configChanges="orientation"
            android:label="@string/title_activity_informasi_artefak"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".TreasureHunt.PermainanTreasureHunt"
            android:configChanges="orientation"
            android:label="@string/title_activity_permainan_treasure_hunt"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".TreasureHunt.GameQuiz"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".TreasureHunt.GameSiluet"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".TreasureHunt.GameEnd"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".TreasureHunt.Login"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".TreasureHunt.Register"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".Information.Image" />
        <activity android:name=".TreasureHunt.Ruangan" />
        <activity
            android:name=".MenuUtama"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>